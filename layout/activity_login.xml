<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.foodapp.LoginActivity"
    android:background="@color/background">


    <ImageView
        android:id="@+id/topshape"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:src="@drawable/topshape"></ImageView>

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_icon"></ImageView>

    <TextView
        android:id="@+id/log_in_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topshape"
        android:layout_marginStart="10dp"
        android:text="Login"
        android:textColor="@color/balck"
        android:textSize="30sp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/email_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/log_in_txt"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:text="E-mail"
        android:textSize="20sp"></TextView>

    <EditText
        android:id="@+id/email_field"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/email_txt"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/custom_edit_text_cut"
        android:drawablePadding="12dp"
        android:hint="Email"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="@color/balck" />

    <TextView
        android:id="@+id/pass_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_field"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:text="Password"
        android:textSize="20sp"></TextView>

    <EditText
        android:id="@+id/pass_field"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/pass_txt"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/custom_edit_text_cut"
        android:drawablePadding="12dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="@color/balck"


        />

    <TextView
        android:id="@+id/forget_pass_txt"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pass_field"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="5dp"
        android:text="Forget Password? "
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"></TextView>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_below="@+id/forget_pass_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/rec_btn"
        android:backgroundTint="@color/colorPrimary"
        android:text="login"
        android:textColor="@color/white"></Button>

    <TextView
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="5dp"
        android:text="Don't have an account? "
        android:textSize="20sp"></TextView>

    <TextView
        android:id="@+id/sign_up_txt"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_btn"
        android:layout_marginStart="260dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:text="Sign Up"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_up_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:text="------------------------ sign in with ------------------------"
        android:textSize="20sp"></TextView>

    <Button
        android:id="@+id/face_btn"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_below="@+id/txt"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rec_btn"
        android:backgroundTint="@color/white_btn"
        android:drawableLeft="@drawable/face_icon"
        android:padding="10dp"
        android:text="Facebook"></Button>

    <Button
        android:id="@+id/google_btn"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_below="@+id/txt"
        android:layout_marginStart="250dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rec_btn"
        android:backgroundTint="@color/white_btn"
        android:drawableLeft="@drawable/google_icon"
        android:padding="10dp"
        android:text="Google"></Button>





</RelativeLayout>