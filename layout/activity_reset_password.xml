<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.foodapp.ResetPasswordActivity"
    android:background="@color/background">


    <ImageView
        android:id="@+id/topshape"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:src="@drawable/topshape"></ImageView>

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_icon"></ImageView>

    <TextView
        android:id="@+id/reset_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topshape"
        android:layout_marginStart="10dp"
        android:text="Reset Password"
        android:textColor="@color/balck"
        android:textSize="30sp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/des_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reset_txt"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:text="Please enter your email address to request a password reset"
        android:textSize="20sp"></TextView>

    <EditText
        android:id="@+id/email_field"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/des_txt"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/custom_edit_text_cut"
        android:drawablePadding="12dp"
        android:hint="xxxxx@example.com"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="@color/balck" />

    <Button
        android:id="@+id/send_btn"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_below="@+id/email_field"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/rec_btn"
        android:backgroundTint="@color/colorPrimary"
        android:text="send"
        android:textColor="@color/white"></Button>


</RelativeLayout>